{
  "name": "cisc474-project-starter",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "clean": "turbo run clean",
    "dev": "turbo run dev --filter=web-start --filter=api",
    "dev:all": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "check-types": "turbo run check-types",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "auth:test": "echo 'Testing Auth0 endpoints...' && curl -s http://localhost:3000/courses -w '\\nStatus: %{http_code}\\n' && echo '\\nExpected: 401 Unauthorized (auth required)'",
    "auth:test-with-token": "echo 'Set TOKEN environment variable first, then:' && echo 'curl http://localhost:3000/courses -H \"Authorization: Bearer $TOKEN\"'",
    "auth:devtools": "react-devtools",
    "test:e2e": "playwright test",
    "test:e2e:auth": "playwright test tests/e2e/auth",
    "test:e2e:frontend": "playwright test tests/e2e/auth/frontend-integration.spec.ts",
    "test:e2e:parallel": "playwright test --workers=80%",
    "test:e2e:fast": "sh tests/e2e/run-parallel-tests.sh",
    "test:e2e:shard": "sh tests/e2e/run-parallel-tests.sh shard",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:auth:quick": "npm run auth:test",
    "test:auth:full": "sh tests/e2e/run-auth-tests.sh",
    "playwright:install": "npx playwright install",
    "users:create": "sh scripts/create-test-users.sh",
    "users:create:custom": "sh scripts/create-test-users.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "tsx": "4.19.1",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "database"
  ]
}
